generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fund {
  id                      String    @id @default(uuid())
  externalId              String?   @unique
  name                    String
  number                  Int
  slug                    String?
  status                  String    @default("active")
  currency                String    @default("USD")
  totalBudget             Decimal   @default(0) @db.Decimal(18, 2)
  totalAwarded            Decimal   @default(0) @db.Decimal(18, 2)
  totalDistributed        Decimal   @default(0) @db.Decimal(18, 2)
  proposalsCount          Int       @default(0)
  fundedProposalsCount    Int       @default(0)
  completedProposalsCount Int       @default(0)
  votingRecords           VotingRecord[]
  startDate               DateTime?
  endDate                 DateTime?
  projects                Project[]
  sourceUrl               String
  sourceType              String
  lastSeenAt              DateTime
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@index([externalId])
  @@index([number])
}

model Project {
  id              String        @id @default(uuid())
  externalId      String?       @unique
  fundId          String
  fund            Fund          @relation(fields: [fundId], references: [id])
  title           String
  slug            String?
  description     String
  problem         String?
  solution        String?
  experience      String?
  category        String
  status          String
  fundingStatus   String        @default("pending")
  fundingAmount   Decimal       @db.Decimal(18, 2)
  amountReceived  Decimal       @default(0) @db.Decimal(18, 2)
  currency        String        @default("USD")
  yesVotes        Int           @default(0)
  noVotes         Int           @default(0)
  fundedAt        DateTime?
  website         String?
  milestones      Milestone[]
  deliverables    Deliverable[]
  projectPeople   ProjectPerson[]
  projectOrgs     ProjectOrganization[]
  links           Link[]
  reviews         Review[]
  ratings         Rating[]
  concerns        Concern[]
  claims          ProjectClaim[]
  notifications   Notification[]
  votingRecords   VotingRecord[]
  flags           Flag[]
  sourceUrl       String
  sourceType      String
  lastSeenAt      DateTime
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([externalId])
  @@index([fundId, createdAt])
  @@index([status, createdAt])
  @@index([fundingStatus])
  @@index([category, createdAt])
}

model Milestone {
  id          String       @id @default(uuid())
  projectId   String
  project     Project      @relation(fields: [projectId], references: [id])
  title       String
  dueDate     DateTime?
  status      String
  catalystMilestoneId String?
  somStatus   String?
  poaStatus   String?
  poaSubmittedAt DateTime?
  poaApprovedAt DateTime?
  reviewerFeedback String?
  paymentStatus String?
  paymentTxHash String?
  evidenceUrls String[]
  deliverables Deliverable[]
  sourceUrl   String
  sourceType  String
  lastSeenAt  DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Deliverable {
  id          String     @id @default(uuid())
  projectId   String
  milestoneId String?
  project     Project    @relation(fields: [projectId], references: [id])
  milestone   Milestone? @relation(fields: [milestoneId], references: [id])
  title       String
  description String?
  status      String
  sourceUrl   String
  sourceType  String
  lastSeenAt  DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Person {
  id                      String    @id @default(uuid())
  externalId              String?   @unique
  name                    String
  username                String?
  bio                     String?
  aliases                 String[]
  twitter                 String?
  linkedin                String?
  email                   String?
  heroImgUrl              String?
  // Funding stats (denormalized for query performance)
  proposalsCount          Int       @default(0)
  fundedProposalsCount    Int       @default(0)
  completedProposalsCount Int       @default(0)
  totalAmountRequested    Decimal   @default(0) @db.Decimal(18, 2)
  totalAmountAwarded      Decimal   @default(0) @db.Decimal(18, 2)
  totalAmountReceived     Decimal   @default(0) @db.Decimal(18, 2)
  currency                String    @default("USD")
  // Relationships
  projectPeople           ProjectPerson[]
  organizations           PersonOrganization[]
  accountabilityScore     AccountabilityScore?
  sourceUrl               String
  sourceType              String
  lastSeenAt              DateTime
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@index([name])
  @@index([externalId])
}

model Organization {
  id                      String    @id @default(uuid())
  externalId              String?   @unique
  name                    String
  bio                     String?
  website                 String?
  heroImgUrl              String?
  // Funding stats (denormalized for query performance)
  proposalsCount          Int       @default(0)
  fundedProposalsCount    Int       @default(0)
  completedProposalsCount Int       @default(0)
  totalAmountAwarded      Decimal   @default(0) @db.Decimal(18, 2)
  totalAmountReceived     Decimal   @default(0) @db.Decimal(18, 2)
  currency                String    @default("USD")
  // Relationships
  members                 PersonOrganization[]
  projectOrgs             ProjectOrganization[]
  sourceUrl               String
  sourceType              String
  lastSeenAt              DateTime
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@index([externalId])
}

model ProjectPerson {
  id        String   @id @default(uuid())
  projectId String
  personId  String
  role      String?
  isPrimary Boolean  @default(false)
  project   Project  @relation(fields: [projectId], references: [id])
  person    Person   @relation(fields: [personId], references: [id])
  createdAt DateTime @default(now())

  @@unique([projectId, personId])
  @@index([projectId, createdAt])
  @@index([personId])
}

model ProjectOrganization {
  id             String       @id @default(uuid())
  projectId      String
  organizationId String
  role           String?
  project        Project      @relation(fields: [projectId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())

  @@unique([projectId, organizationId])
}

model PersonOrganization {
  id             String       @id @default(uuid())
  personId       String
  organizationId String
  role           String?
  person         Person       @relation(fields: [personId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())

  @@unique([personId, organizationId])
}

model Link {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  type      String
  url       String
  sourceUrl String
  sourceType String
  lastSeenAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            String    @id @default(uuid())
  walletAddress String?   @unique
  email         String?   @unique
  displayName   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  ratings       Rating[]
  concerns      Concern[]
  claims        ProjectClaim[]
  responses     ConcernResponse[]
  reputation    Reputation?
  reputationEvents ReputationEvent[]
  sessions      Session[]
  reviews       Review[]
  reviewVotes   ReviewVote[]
  flags         Flag[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
}

model Review {
  id                String     @id @default(uuid())
  projectId         String
  project           Project    @relation(fields: [projectId], references: [id])
  userId            String
  user              User       @relation(fields: [userId], references: [id])
  rating            Int
  title             String
  content           String
  alignmentScore    Int?
  feasibilityScore  Int?
  auditabilityScore Int?
  helpfulCount      Int        @default(0)
  notHelpfulCount   Int        @default(0)
  status            String     @default("published")
  votes             ReviewVote[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([projectId, createdAt])
  @@index([userId, createdAt])
}

model ReviewVote {
  id        String   @id @default(uuid())
  reviewId  String
  review    Review   @relation(fields: [reviewId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  value     Int
  createdAt DateTime @default(now())

  @@unique([reviewId, userId])
  @@index([userId, createdAt])
}

model AccountabilityScore {
  id                  String   @id @default(uuid())
  personId            String   @unique
  person              Person   @relation(fields: [personId], references: [id])
  overallScore        Int
  completionScore     Int
  deliveryScore       Int
  communityScore      Int
  efficiencyScore     Int
  communicationScore  Int
  badge               String
  calculatedAt        DateTime @default(now())

  @@index([badge])
}

model VotingRecord {
  id                 String   @id @default(uuid())
  projectId          String
  project            Project  @relation(fields: [projectId], references: [id])
  fundId             String
  fund               Fund     @relation(fields: [fundId], references: [id])
  category           String
  yesVotes           Int
  noVotes            Int
  abstainVotes       Int
  uniqueWallets      Int
  approvalRate       Float
  fundingProbability Float
  fundRank           Int?
  categoryRank       Int?
  sourceUrl          String
  sourceType         String
  capturedAt         DateTime
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([fundId, category])
  @@index([projectId])
}

model Rating {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  score     Int
  comment   String?
  createdAt DateTime @default(now())
}

model Concern {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  category    String
  description String
  evidenceUrl String?
  status      String   @default("pending")
  responses   ConcernResponse[]
  createdAt   DateTime @default(now())

  @@index([projectId, status])
}

model ProjectClaim {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model ConcernResponse {
  id        String   @id @default(uuid())
  concernId String
  concern   Concern  @relation(fields: [concernId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  concernId String?
  type      String
  payload   Json
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model Reputation {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  score     Int      @default(0)
  tier      String   @default("bronze")
  updatedAt DateTime @updatedAt
  history   ReputationEvent[]
}

model ReputationEvent {
  id           String   @id @default(uuid())
  reputationId String
  reputation   Reputation @relation(fields: [reputationId], references: [id])
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  change       Int
  reason       String
  createdAt    DateTime @default(now())
}

model Flag {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  type        String   // "automated" or "community"
  category    String   // repeat_delays, similar_proposal, abandoned, plagiarism, ghost_project, overdue_milestone, funding_cluster, other
  severity    String   @default("medium") // low, medium, high, critical
  status      String   @default("pending") // pending, confirmed, dismissed, resolved
  title       String
  description String
  evidenceUrl String?
  metadata    Json?    // Additional data for automated flags (e.g., similarity scores, related projects)
  reviewedBy  String?  // Admin/moderator who reviewed the flag
  reviewedAt  DateTime?
  resolvedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId, status])
  @@index([type, status])
  @@index([category])
  @@index([createdAt])
}
