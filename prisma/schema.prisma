// Looking for ways to speed up your queries, or scale easily with your serverless or edge functions?
// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fund {
  id                      String    @id @default(uuid())
  externalId              String?   @unique
  name                    String
  number                  Int
  slug                    String?
  status                  String    @default("active")
  currency                String    @default("USD")
  totalBudget             Decimal   @default(0) @db.Decimal(18, 2)
  totalAwarded            Decimal   @default(0) @db.Decimal(18, 2)
  totalDistributed        Decimal   @default(0) @db.Decimal(18, 2)
  proposalsCount          Int       @default(0)
  fundedProposalsCount    Int       @default(0)
  completedProposalsCount Int       @default(0)
  votingRecords           VotingRecord[]
  startDate               DateTime?
  endDate                 DateTime?
  projects                Project[]
  sourceUrl               String
  sourceType              String
  lastSeenAt              DateTime
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@index([externalId])
  @@index([number])
}

model Project {
  id              String        @id @default(uuid())
  externalId      String?       @unique
  fundId          String
  fund            Fund          @relation(fields: [fundId], references: [id])
  title           String
  slug            String?
  description     String
  problem         String?
  solution        String?
  experience      String?
  category        String
  status          String
  fundingStatus   String        @default("pending")
  fundingAmount   Decimal       @db.Decimal(18, 2)
  amountReceived  Decimal       @default(0) @db.Decimal(18, 2)
  currency        String        @default("USD")
  yesVotes        Int           @default(0)
  noVotes         Int           @default(0)
  fundedAt        DateTime?
  website         String?
  githubUrl       String?
  githubOwner     String?
  githubRepo      String?
  githubActivityScore Int?
  githubLastSync  DateTime?
  milestones      Milestone[]
  deliverables    Deliverable[]
  projectPeople   ProjectPerson[]
  projectOrgs     ProjectOrganization[]
  links           Link[]
  reviews         Review[]
  ratings         Rating[]
  concerns        Concern[]
  claims          ProjectClaim[]
  notifications   Notification[]
  votingRecords   VotingRecord[]
  flags           Flag[]
  reports         MonthlyReport[]
  communityProjects CommunityProject[]
  completionNFT   CompletionNFT?
  bookmarks       Bookmark[]
  fundingTransactions FundingTransaction[]
  sourceUrl       String
  sourceType      String
  lastSeenAt      DateTime
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([externalId])
  @@index([fundId, createdAt])
  @@index([status, createdAt])
  @@index([fundingStatus])
  @@index([category, createdAt])
}

model Milestone {
  id          String       @id @default(uuid())
  projectId   String
  project     Project      @relation(fields: [projectId], references: [id])
  title       String
  dueDate     DateTime?
  status      String
  catalystMilestoneId String?
  somStatus   String?
  poaStatus   String?
  poaSubmittedAt DateTime?
  poaApprovedAt DateTime?
  reviewerFeedback String?
  paymentStatus String?
  paymentTxHash String?
  evidenceUrls String[]
  deliverables Deliverable[]
  sourceUrl   String
  sourceType  String
  lastSeenAt  DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model MonthlyReport {
  id            String   @id @default(uuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id])
  month         Int
  year          Int
  reporterName  String
  summary       String
  progress      String?
  blockers      String?
  nextSteps     String?
  evidenceUrls  String[]
  status        String   @default("pending")
  reviewerNote  String?
  reviewedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([projectId, year, month])
  @@index([year, month])
}

model Deliverable {
  id          String     @id @default(uuid())
  projectId   String
  milestoneId String?
  project     Project    @relation(fields: [projectId], references: [id])
  milestone   Milestone? @relation(fields: [milestoneId], references: [id])
  title       String
  description String?
  status      String
  sourceUrl   String
  sourceType  String
  lastSeenAt  DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Person {
  id                      String    @id @default(uuid())
  externalId              String?   @unique
  name                    String
  username                String?
  bio                     String?
  aliases                 String[]
  twitter                 String?
  linkedin                String?
  email                   String?
  heroImgUrl              String?
  // Funding stats (denormalized for query performance)
  proposalsCount          Int       @default(0)
  fundedProposalsCount    Int       @default(0)
  completedProposalsCount Int       @default(0)
  totalAmountRequested    Decimal   @default(0) @db.Decimal(18, 2)
  totalAmountAwarded      Decimal   @default(0) @db.Decimal(18, 2)
  totalAmountReceived     Decimal   @default(0) @db.Decimal(18, 2)
  currency                String    @default("USD")
  // Relationships
  projectPeople           ProjectPerson[]
  organizations           PersonOrganization[]
  accountabilityScore     AccountabilityScore?
  accountabilityNotifications AccountabilityNotification[]
  walletAddresses         WalletAddress[]
  sourceUrl               String
  sourceType              String
  lastSeenAt              DateTime
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@index([name])
  @@index([externalId])
}

model Organization {
  id                      String    @id @default(uuid())
  externalId              String?   @unique
  name                    String
  bio                     String?
  website                 String?
  heroImgUrl              String?
  // Funding stats (denormalized for query performance)
  proposalsCount          Int       @default(0)
  fundedProposalsCount    Int       @default(0)
  completedProposalsCount Int       @default(0)
  totalAmountAwarded      Decimal   @default(0) @db.Decimal(18, 2)
  totalAmountReceived     Decimal   @default(0) @db.Decimal(18, 2)
  currency                String    @default("USD")
  // Relationships
  members                 PersonOrganization[]
  projectOrgs             ProjectOrganization[]
  accountabilityScore     OrganizationAccountabilityScore?
  sourceUrl               String
  sourceType              String
  lastSeenAt              DateTime
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@index([externalId])
}

model ProjectPerson {
  id        String   @id @default(uuid())
  projectId String
  personId  String
  role      String?
  isPrimary Boolean  @default(false)
  project   Project  @relation(fields: [projectId], references: [id])
  person    Person   @relation(fields: [personId], references: [id])
  createdAt DateTime @default(now())

  @@unique([projectId, personId])
  @@index([projectId, createdAt])
  @@index([personId])
}

model ProjectOrganization {
  id             String       @id @default(uuid())
  projectId      String
  organizationId String
  role           String?
  project        Project      @relation(fields: [projectId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())

  @@unique([projectId, organizationId])
}

model PersonOrganization {
  id             String       @id @default(uuid())
  personId       String
  organizationId String
  role           String?
  person         Person       @relation(fields: [personId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())

  @@unique([personId, organizationId])
}

model Link {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  type      String
  url       String
  sourceUrl String
  sourceType String
  lastSeenAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  MEMBER
  PROPOSER
  REVIEWER
  MODERATOR
  ADMIN
}

model User {
  id            String    @id @default(uuid())
  walletAddress String?   @unique
  email         String?   @unique
  googleId      String?   @unique
  displayName   String?
  avatarUrl     String?
  bio           String?
  role          UserRole  @default(MEMBER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  ratings       Rating[]
  concerns      Concern[]
  claims        ProjectClaim[]
  responses     ConcernResponse[]
  reputation    Reputation?
  reputationEvents ReputationEvent[]
  sessions      Session[]
  reviews       Review[]
  reviewVotes   ReviewVote[]
  flags         Flag[]
  communities   Community[]
  accountabilityScoreDisputes AccountabilityScoreDispute[]
  bookmarks     Bookmark[] @relation("UserBookmarks")
  bookmarkLists BookmarkList[] @relation("UserBookmarkLists")
  walletAddresses WalletAddress[] @relation("UserWallets")
  reviewerProfile ReviewerProfile?
  moderatorProfile ModeratorProfile?
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
}

model Review {
  id                String     @id @default(uuid())
  projectId         String
  project           Project    @relation(fields: [projectId], references: [id])
  userId            String
  user              User       @relation(fields: [userId], references: [id])
  rating            Int
  title             String
  content           String
  alignmentScore    Int?
  feasibilityScore  Int?
  auditabilityScore Int?
  helpfulCount      Int        @default(0)
  notHelpfulCount   Int        @default(0)
  status            String     @default("published")
  votes             ReviewVote[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([projectId, createdAt])
  @@index([userId, createdAt])
}

model ReviewVote {
  id        String   @id @default(uuid())
  reviewId  String
  review    Review   @relation(fields: [reviewId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  value     Int
  createdAt DateTime @default(now())

  @@unique([reviewId, userId])
  @@index([userId, createdAt])
}

model AccountabilityScore {
  id                  String   @id @default(uuid())
  personId            String   @unique
  person              Person   @relation(fields: [personId], references: [id])
  overallScore        Int
  completionScore     Int
  deliveryScore       Int
  communityScore      Int
  efficiencyScore     Int
  communicationScore  Int
  badge               String
  status              String   @default("preview")
  previewUntil         DateTime?
  publishedAt         DateTime?
  calculatedAt        DateTime @default(now())
  disputes            AccountabilityScoreDispute[]
  audits              AccountabilityScoreAudit[]

  @@index([badge])
  @@index([status])
}

model AccountabilityScoreDispute {
  id        String   @id @default(uuid())
  scoreId   String
  score     AccountabilityScore @relation(fields: [scoreId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("pending")
  reason    String
  evidence  String?
  createdAt DateTime @default(now())
  resolvedAt DateTime?
  resolvedBy String?

  @@index([scoreId, status])
  @@index([userId, createdAt])
}

model AccountabilityScoreAudit {
  id        String   @id @default(uuid())
  scoreId   String
  score     AccountabilityScore @relation(fields: [scoreId], references: [id])
  action    String
  actorId   String?
  payload   Json?
  createdAt DateTime @default(now())

  @@index([scoreId, createdAt])
}

model AccountabilityNotification {
  id        String   @id @default(uuid())
  personId  String
  person    Person   @relation(fields: [personId], references: [id])
  type      String
  payload   Json?
  status    String   @default("pending")
  createdAt DateTime @default(now())

  @@index([personId, createdAt])
}

model OrganizationAccountabilityScore {
  id             String       @id @default(uuid())
  organizationId String       @unique
  organization   Organization @relation(fields: [organizationId], references: [id])
  overallScore   Int
  badge          String
  calculatedAt   DateTime     @default(now())

  @@index([badge])
}

model VotingRecord {
  id                 String   @id @default(uuid())
  projectId          String
  project            Project  @relation(fields: [projectId], references: [id])
  fundId             String
  fund               Fund     @relation(fields: [fundId], references: [id])
  category           String
  yesVotes           Int
  noVotes            Int
  abstainVotes       Int
  uniqueWallets      Int
  approvalRate       Float
  fundingProbability Float
  fundRank           Int?
  categoryRank       Int?
  sourceUrl          String
  sourceType         String
  capturedAt         DateTime
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([fundId, category])
  @@index([projectId])
}

model Rating {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  score     Int
  comment   String?
  createdAt DateTime @default(now())
}

model Concern {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  category    String
  description String
  evidenceUrl String?
  status      String   @default("pending")
  responses   ConcernResponse[]
  createdAt   DateTime @default(now())

  @@index([projectId, status])
}

model ProjectClaim {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model ConcernResponse {
  id        String   @id @default(uuid())
  concernId String
  concern   Concern  @relation(fields: [concernId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  concernId String?
  type      String
  payload   Json
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model Reputation {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  score     Int      @default(0)
  tier      String   @default("bronze")
  updatedAt DateTime @updatedAt
  history   ReputationEvent[]
}

model ReputationEvent {
  id           String   @id @default(uuid())
  reputationId String
  reputation   Reputation @relation(fields: [reputationId], references: [id])
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  change       Int
  reason       String
  createdAt    DateTime @default(now())
}

model Flag {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  type        String   // "automated" or "community"
  category    String   // repeat_delays, similar_proposal, abandoned, plagiarism, ghost_project, overdue_milestone, funding_cluster, other
  severity    String   @default("medium") // low, medium, high, critical
  status      String   @default("pending") // pending, confirmed, dismissed, resolved
  title       String
  description String
  evidenceUrl String?
  metadata    Json?    // Additional data for automated flags (e.g., similarity scores, related projects)
  reviewedBy  String?  // Admin/moderator who reviewed the flag
  reviewedAt  DateTime?
  resolvedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId, status])
  @@index([type, status])
  @@index([category])
  @@index([createdAt])
}

model Community {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  createdById String
  createdBy   User     @relation(fields: [createdById], references: [id])
  projects    CommunityProject[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([createdById])
}

model CommunityProject {
  id          String    @id @default(uuid())
  communityId String
  community   Community @relation(fields: [communityId], references: [id])
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id])
  addedAt     DateTime  @default(now())

  @@unique([communityId, projectId])
  @@index([communityId])
  @@index([projectId])
}

model CompletionNFT {
  id              String   @id @default(uuid())
  projectId       String   @unique
  project         Project  @relation(fields: [projectId], references: [id])
  
  // NFT metadata
  policyId        String?
  assetId         String?
  assetName       String?
  metadataJson    Json?
  imageUrl        String?
  
  // Minting transaction
  mintTxHash      String?
  mintedAt        DateTime?
  mintStatus      String   @default("pending") // pending, minting, minted, failed
  mintError       String?
  
  // Verification
  verificationStatus String @default("unverified") // unverified, pending, verified, rejected
  verifiedAt      DateTime?
  verifiedBy      String?
  verifierWallet  String?
  
  // Proposer wallet
  proposerWallet  String?
  walletVerified  Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([mintStatus])
  @@index([verificationStatus])
}

model Bookmark {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation("UserBookmarks", fields: [userId], references: [id])
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  action      String   @default("like") // like, skip, save
  listId      String?
  list        BookmarkList? @relation(fields: [listId], references: [id])
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
  @@index([listId])
  @@index([action])
}

model BookmarkList {
  id          String     @id @default(uuid())
  userId      String
  user        User       @relation("UserBookmarkLists", fields: [userId], references: [id])
  name        String
  description String?
  isPublic    Boolean    @default(false)
  bookmarks   Bookmark[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@index([isPublic])
}

model FundingTransaction {
  id              String   @id @default(uuid())
  projectId       String
  project         Project  @relation(fields: [projectId], references: [id])
  
  // Transaction details
  txHash          String   @unique
  amount          Decimal  @db.Decimal(20, 6)
  currency        String   @default("ADA")
  usdValueAtTime  Decimal? @db.Decimal(20, 2)
  adaPrice        Decimal? @db.Decimal(10, 4)
  
  // Addresses
  fromAddress     String?
  toAddress       String
  
  // Timing
  txDate          DateTime
  blockHeight     Int?
  epoch           Int?
  slot            Int?
  
  // Transaction type
  txType          String   @default("funding") // funding, milestone, refund
  milestoneId     String?
  
  // Verification
  verified        Boolean  @default(false)
  verifiedAt      DateTime?
  
  // External links
  explorerUrl     String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([projectId])
  @@index([txDate])
  @@index([txType])
  @@index([toAddress])
}

model WalletAddress {
  id              String   @id @default(uuid())
  address         String   @unique
  
  // Ownership
  ownerId         String?
  owner           User?    @relation("UserWallets", fields: [ownerId], references: [id])
  personId        String?
  person          Person?  @relation(fields: [personId], references: [id])
  organizationId  String?
  
  // Verification
  verified        Boolean  @default(false)
  verifiedAt      DateTime?
  signatureHash   String?
  signatureNonce  String?
  
  // Metadata
  label           String?
  description     String?
  isPrimary       Boolean  @default(false)
  isPublic        Boolean  @default(true)
  
  // Stats
  totalReceived   Decimal? @db.Decimal(20, 6)
  totalSent       Decimal? @db.Decimal(20, 6)
  lastActivity    DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([ownerId])
  @@index([personId])
  @@index([verified])
}

model ReviewerProfile {
  id                  String   @id @default(uuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id])
  
  // Ideascale integration
  ideascaleId         String?  @unique
  ideascaleUsername   String?
  
  // Participation stats
  fundsParticipated   String[] // Fund IDs
  proposalsReviewed   Int      @default(0)
  averageScore        Decimal? @db.Decimal(3, 2)
  
  // Badges and status
  isActive            Boolean  @default(true)
  isVeteran           Boolean  @default(false) // 3+ funds
  badges              String[] // veteran, top_reviewer, etc.
  
  // Quality metrics
  reviewQualityScore  Decimal? @db.Decimal(3, 2)
  flaggedReviews      Int      @default(0)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([isActive])
  @@index([isVeteran])
}

model ModeratorProfile {
  id                  String   @id @default(uuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id])
  
  // Role and scope
  role                String   @default("moderator") // moderator, senior_moderator, admin
  scope               String[] // fund IDs or "global"
  
  // Moderation stats
  actionsCount        Int      @default(0)
  flagsResolved       Int      @default(0)
  reportsHandled      Int      @default(0)
  warningsIssued      Int      @default(0)
  
  // Status
  isActive            Boolean  @default(true)
  appointedAt         DateTime @default(now())
  appointedBy         String?
  
  // Badges
  badges              String[] // veteran_mod, top_mod, etc.
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([role])
  @@index([isActive])
}

// Authentication nonce for replay attack prevention
model AuthNonce {
  id           String   @id @default(uuid())
  nonce        String   @unique
  stakeAddress String
  usedAt       DateTime @default(now())
  
  @@index([stakeAddress])
}

// Magic link tokens for email authentication
model MagicLinkToken {
  id        String   @id @default(uuid())
  email     String   @unique
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([token])
}

// Admin-created connections between entities
enum EntityType {
  PERSON
  ORGANIZATION
  PROJECT
}

enum ConnectionType {
  TEAM_MEMBER
  FOUNDER
  ADVISOR
  EMPLOYEE
  PARTNER
  CONTRACTOR
  INVESTOR
  OTHER
}

model AdminConnection {
  id             String         @id @default(uuid())
  sourceType     EntityType
  sourceId       String
  targetType     EntityType
  targetId       String
  connectionType ConnectionType
  evidence       String?
  notes          String?
  createdById    String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  
  @@unique([sourceType, sourceId, targetType, targetId, connectionType])
  @@index([sourceType, sourceId])
  @@index([targetType, targetId])
}

// Feature roadmap and voting
enum FeatureStatus {
  CONSIDERING
  PLANNED
  IN_PROGRESS
  SHIPPED
}

model Feature {
  id          String        @id @default(uuid())
  title       String
  description String
  status      FeatureStatus @default(CONSIDERING)
  category    String
  votes       FeatureVote[]
  createdAt   DateTime      @default(now())
  releasedAt  DateTime?
  
  @@index([status])
}

model FeatureVote {
  id        String   @id @default(uuid())
  featureId String
  feature   Feature  @relation(fields: [featureId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  
  @@unique([featureId, userId])
  @@index([userId])
}
